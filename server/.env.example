# Configurações do Servidor
PORT=3001
NODE_ENV=development

# Certificado Digital A1 (Base64 ou caminho do arquivo)
CERT_PATH=./certificados/certificado.pfx
CERT_PASSWORD=sua_senha_do_certificado

# Ou use o certificado em Base64
# CERT_BASE64=MIIKpAIBAzCCCm...
# CERT_PASSWORD=sua_senha

# CNPJ da Empresa
COMPANY_CNPJ=00.000.000/0000-00

# Ambiente SEFAZ
# producao ou homologacao
SEFAZ_ENVIRONMENT=homologacao

# UF da Empresa (código IBGE)
# 35 = São Paulo, 33 = Rio de Janeiro, etc.
UF_CODE=35

# URLs da SEFAZ (geradas automaticamente baseado na UF)
# Não precisa configurar manualmente

# CORS
CORS_ORIGIN=http://localhost:5173

# Logs
LOG_LEVEL=debug
